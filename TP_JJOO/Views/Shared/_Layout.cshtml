<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JJOO</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar-brand img {
            max-height: 50px; /* Ajusta el tamaño del logo según sea necesario */
        }
    </style>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href='@Url.Action("Index", "Home")'>
            <img src="/images/logo.webp" alt="Logo JJOO">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href='@Url.Action("Historia", "Home")'>Historia</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href='@Url.Action("Deportes", "Home")'>Deportes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href='@Url.Action("Paises", "Home")'>Países</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href='@Url.Action("AgregarDeportista", "Home")'>Agregar Deportista</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href='@Url.Action("Creditos", "Home")'>Créditos</a>
                </li>
            </ul>
        </div>
    </nav>
</head>

<body>

    <main role="main">
        @RenderBody()
    </main>
    <!-- Navbar -->
    

    <!-- Incluye Bootstrap JS y dependencias -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <footer>
        &copy; @DateTime.Now.Year - JJOO
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
